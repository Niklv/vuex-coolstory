{
  "printWidth": 120,
  "tabWidth": 4,
  "singleQuote": true,
  "arrowParens": "avoid",
  "trailingComma": "none",
  "overrides": [
    {
      "files": ["*.json", ".eslintrc", ".prettierrc", ".lintstagedrc"],
      "options": {
        "parser": "json",
        "tabWidth": 2
      }
    },
    {
      "files": "package-lock.json",
      "options": {
        "printWidth": 200
      }
    }
  ]
}
